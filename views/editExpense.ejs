<!DOCTYPE html>
<html lang="en">
<%- include('header') %>
<body>
    <div class="error">
        <% if (err && typeof err === 'string') { %>
            <i class="fa fa-warning" style="font-size:24px;color:red;padding:10px"></i><%= err %>
        <% } %>
        <% if (err && typeof err === 'object') { %>
            <i class="fa fa-warning" style="font-size:24px;color:red;padding:10px"></i>
            <% err.forEach (e => { %>
                <%= e %>
            <% }) %>
        <% } %>
    </div>
    <div class="formAdd">
    <form action="/<%= userId %>/expense/edit/<%= expId %>" method="post">
        <h3>Amount:</h3>
        <input type="text" name="cash" value="<%=datas.cash%>">
        <h3>Note:</h3>
        <input type="text" name="note" value="<%=datas.note%>">
        <h3>Category:</h3>

        <select name="categoryId" id="">  
            <% cat.forEach(item=> { 
                if(item.categoryName == datas.Category.categoryName) {%>
            <option value="<%= item.id %>" selected="datas.Category.categoryName">
                <%= item.categoryName %>
            </option>
            <%} else {%>
            <option value="<%= item.id %>">
                <%= item.categoryName %>
            </option>
            <% }}) %>
        </select><br><br>
        <button type="submit">Edit</button>
    </form>
</div>
</body>
</html>