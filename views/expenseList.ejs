<!DOCTYPE html>
<html lang="en">
<%- include('header',{}) %>
<body>
    <!-- list of expense -->
    <a href="/<%= userId %>/expense/overview">Overview</a>
    <a href="/<%= userId %>/expense/add">Add New Expense</a>
    <br>
    <div class="expenselist">
        <ul>
            <% exp.forEach(item => { %>
            <li class="exlist">
                <h3 class="datexp"><%=item.createdAt%></h3>
                <h4 class="catexp"><i class="fa fa-tags"></i><%=item.Category.categoryName%></h4>
                <p class="notexp"><%=item.note%></p>
                <h4 class="pricexp"><%=item.cash%></h4>
            </li>
            <% }) %>
        </ul>
    </div>
    <table border="1">
            <thead>
                <tr>
                    <td>Date</td>
                    <td>Category</td>
                    <td>Amount</td>
                    <td>Description</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                <% exp.forEach(item => { %>
                <tr>
                    <td><%=item.createdAt%></td>
                    <td><%=item.Category.categoryName%></td>
                    <td><%=item.cash%></td>
                    <td><%=item.note%></td>
                    <td>
                        <a href="/<%= userId %>/expense/edit/<%= item.id %>">edit </a>
                        <a href="/<%= userId %>/expense/delete/<%= item.id %>"> delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
</body>
</html>